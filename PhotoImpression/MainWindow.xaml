<Window x:Class="PhotoImpression.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Photo Impressor" Height="470" Width="645" Loaded="onLoad">
    <Grid x:Name="parentGrid" HorizontalAlignment="Center" MinHeight="420" VerticalAlignment="Center" MinWidth="645" Margin="0,0,0,0">
        <Image x:Name="imageContainer" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,50"/>
        <Grid HorizontalAlignment="Center" MinHeight="50" MinWidth="645" VerticalAlignment="Bottom">
            <Button x:Name="nextButton" Content="Next"  Height="31" Margin="120,0,0,10" VerticalAlignment="Bottom" Width="100" RenderTransformOrigin="0.4,1.258" Click="nextButton_Click"/>
            <Button x:Name="previous" Content="Previous"  Height="31" Margin="0,0,120,10" VerticalAlignment="Bottom" Width="100" Click="previousButton_Click"/>
            <Button x:Name="rightRotate" Content="Right Rotate"  Height="31" Margin="340,0,0,10" VerticalAlignment="Bottom" Width="100" Click="rightRotate_Click"/>
            <Button x:Name="leftRotate" Content="Left Rotate"  Height="31" Margin="0,0,340,10" VerticalAlignment="Bottom" Width="100" Click="leftRotate_Click"/>
        </Grid>
    </Grid>
</Window>
